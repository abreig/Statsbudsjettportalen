{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: dotnet run",
      "type": "shell",
      "command": "dotnet run --project backend/Statsbudsjettportalen.Api",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Frontend: npm run dev",
      "type": "shell",
      "command": "npm run dev --prefix frontend",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Start hele appen (backend + frontend)",
      "dependsOn": [
        "Backend: dotnet run",
        "Frontend: npm run dev"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Nullstill database",
      "type": "shell",
      "command": "RESET_DATABASE=true dotnet run --project backend/Statsbudsjettportalen.Api -- --urls=''",
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
